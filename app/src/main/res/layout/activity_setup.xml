<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.andriybobchuk.weatherApp.Activities.SetupActivity"
        android:background="@color/colorPrimaryLightGrey">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/great_screen" android:id="@+id/page3"
            android:scaleType="centerCrop"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="409dp"
            android:layout_height="339dp"
            android:id="@+id/cl_page2_bottom"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="2dp" app:layout_constraintEnd_toEndOf="parent">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/page2_panel"
                android:id="@+id/imageView5"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        <Button
                android:text="Metric"
                android:layout_width="175dp"
                android:layout_height="50dp" android:id="@+id/btn_metric"
                android:background="@drawable/intro_btn_pt_style"
                android:fontFamily="@font/gotham_medium" app:layout_constraintStart_toStartOf="@+id/imageView5"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="@+id/imageView5"
                android:layout_marginTop="67dp"/>
        <Button
                android:text="IMPERIAL"
                android:layout_width="175dp"
                android:layout_height="50dp" android:id="@+id/btn_imperial"
                android:background="@drawable/intro_btn_pt_style"
                android:fontFamily="@font/gotham_medium" app:layout_constraintStart_toStartOf="@+id/imageView5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_metric" android:layout_marginTop="15dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="409dp"
            android:layout_height="389dp"
            android:id="@+id/cl_page2"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="2dp" app:layout_constraintEnd_toEndOf="parent">

        <TextView
                android:text="°C or °F?"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView43"
                android:fontFamily="@font/gotham_bold" android:textSize="50sp"
                android:textColor="@color/colorWhite" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="122dp"
                android:layout_marginStart="73dp"/>
        <TextView
                android:text="Alright, now pick your unit system! Choose Metric to see temperature in Celsius"
                android:layout_width="273dp"
                android:layout_height="80dp" android:id="@+id/textView53"
                android:fontFamily="@font/gotham_light" android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="72dp" app:layout_constraintTop_toBottomOf="@+id/textView43"
                android:layout_marginTop="24dp"/>
        <ImageView
                android:layout_width="55dp"
                android:layout_height="17dp" app:srcCompat="@drawable/iv_second" android:id="@+id/imageView63"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/textView53"
                android:layout_marginTop="20dp" android:layout_marginStart="72dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="259dp"
            android:layout_height="236dp"
            android:id="@+id/cl_page3"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="73dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="60dp">

        <TextView
                android:text="Great!"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView7"
                android:fontFamily="@font/gotham_bold" android:textSize="50sp"
                android:textColor="@color/colorWhite"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"/>
        <TextView
                android:text="You're now all set up. You can always change preferences in Options"
                android:layout_width="254dp"
                android:layout_height="73dp" android:id="@+id/textView8"
                android:fontFamily="@font/gotham_light" android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/textView7"
                android:layout_marginTop="25dp" android:textColor="@color/colorWhite"/>
        <Button
                android:text="Start"
                android:layout_width="111dp"
                android:layout_height="47dp" android:id="@+id/btn_start"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/textView8"
                android:background="@drawable/intro_btn_pt_style"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="409dp"
            android:layout_height="339dp"
            android:id="@+id/cl_page1_bottom"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="1dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="1dp" android:layout_marginEnd="1dp" app:layout_constraintEnd_toEndOf="parent">

        <Button
                android:text="Enable GPS"
                android:layout_width="213dp"
                android:layout_height="52dp" android:id="@+id/btn_gps"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="65dp"
                android:background="@drawable/intro_btn_pt_style" android:fontFamily="@font/gotham_medium"/>
        <TextView
                android:text="OR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView6"
                android:fontFamily="@font/gotham_medium" android:textSize="25sp"
                android:textColor="@color/colorWhite"
                app:layout_constraintBottom_toTopOf="@+id/btn_gps"
                android:layout_marginBottom="20dp" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
        />
        <EditText
                android:layout_width="213dp"
                android:layout_height="52dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/et_city"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/btn_confirm"
                android:background="@drawable/intro_btn_pt_style" android:fontFamily="@font/gotham_medium"
                android:textAlignment="center" android:hint="Enter your city" android:layout_marginBottom="20dp"/>
        <Button
                android:text="Confirm"
                android:layout_width="213dp"
                android:layout_height="52dp" android:id="@+id/btn_confirm"
                app:layout_constraintBottom_toTopOf="@+id/textView6" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:background="@drawable/intro_btn_pt_style"
                android:fontFamily="@font/gotham_medium" android:layout_marginBottom="20dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="409dp"
            android:layout_height="389dp"
            android:id="@+id/cl_page1"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="1dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="1dp"
            android:layout_marginEnd="1dp" app:layout_constraintEnd_toEndOf="parent">

        <TextView
                android:text="Hello!"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView4"
                android:fontFamily="@font/gotham_bold" android:textSize="50sp"
                android:textColor="@color/colorWhite" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="122dp"
                android:layout_marginStart="73dp"/>
        <TextView
                android:text="Welcome to the best weather app, before you start, give us some info"
                android:layout_width="254dp"
                android:layout_height="73dp" android:id="@+id/textView5"
                android:fontFamily="@font/gotham_light" android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="72dp" app:layout_constraintTop_toBottomOf="@+id/textView4"
                android:layout_marginTop="24dp"/>
        <ImageView
                android:layout_width="55dp"
                android:layout_height="17dp" app:srcCompat="@drawable/iv_first" android:id="@+id/imageView6"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/textView5"
                android:layout_marginTop="20dp" android:layout_marginStart="72dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>