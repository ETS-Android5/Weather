<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="#0E0E0E">
    <ImageView
            android:layout_width="411dp"
            android:layout_height="478dp" app:srcCompat="@drawable/ded1"
            android:id="@+id/imageView"
            tools:layout_editor_absoluteY="0dp" tools:layout_editor_absoluteX="0dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gotham_bold"
            app:fontFamily="@font/gotham_bold"
            android:text="Today"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:textSize="25sp" android:textColor="#FFFFFF"
            app:layout_constraintVertical_bias="0.036"
            android:id="@+id/tv_day" android:layout_marginLeft="20dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fontFamily="@font/gotham_bold" android:fontFamily="@font/gotham_bold"
            android:text="9°C"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:textSize="50sp" android:textColor="#FFFFFF"
            app:layout_constraintHorizontal_bias="0.829"
            android:id="@+id/tv_temperature"
            app:layout_constraintVertical_bias="0.379"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fontFamily="@font/gotham_bold" android:fontFamily="@font/gotham_bold"
            android:text="7°... 12°"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:textSize="20sp" android:textColor="#8C8C8C"
            app:layout_constraintHorizontal_bias="0.788"
            android:id="@+id/tv_min_max"
            app:layout_constraintVertical_bias="0.435"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fontFamily="@font/gotham_bold" android:fontFamily="@font/gotham_bold"
            android:text="Lviv, Ukraine"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textSize="17sp" android:textColor="#8C8C8C"
            android:id="@+id/tv_region"
            android:layout_marginLeft="20dp" app:layout_constraintTop_toBottomOf="@+id/tv_day"
    />
    <TextView
            android:layout_width="193dp"
            android:layout_height="37dp"
            app:fontFamily="@font/gotham_bold" android:fontFamily="@font/gotham_bold"
            android:text="Details"
            android:textSize="25sp" android:textColor="#FFFFFF"
            android:id="@+id/tv_details"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp" android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="381dp"
            android:layout_height="138dp"
            android:background="@drawable/bgrate" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="15dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="15dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="15dp">
        <Button
                android:text="M"
                android:layout_width="59dp"
                android:layout_height="match_parent" android:id="@+id/button6" android:layout_weight="1"
                android:background="@drawable/bgrate" android:textSize="22sp" android:fontFamily="@font/gotham_medium"
                android:textAlignment="center"/>
        <Button
                android:text="T"
                android:layout_width="59dp"
                android:layout_height="match_parent" android:id="@+id/button16" android:layout_weight="1"
                android:background="@drawable/bgrate" android:textSize="22sp"/>
        <Button
                android:text="W"
                android:layout_width="59dp"
                android:layout_height="match_parent" android:id="@+id/button17" android:layout_weight="1"
                android:background="@drawable/bgrate" android:textSize="22sp"/>
        <Button
                android:text="T"
                android:layout_width="59dp"
                android:layout_height="match_parent" android:id="@+id/button18" android:layout_weight="1"
                android:background="@drawable/bgrate" android:textSize="22sp"/>
        <Button
                android:text="F"
                android:layout_width="59dp"
                android:layout_height="match_parent" android:id="@+id/button19" android:layout_weight="1"
                android:background="@drawable/bgrate" android:textSize="22sp"/>
        <Button
                android:text="S"
                android:layout_width="59dp"
                android:layout_height="match_parent" android:id="@+id/button20" android:layout_weight="1"
                android:background="@drawable/bgrate" android:textSize="22sp"/>
        <Button
                android:text="S"
                android:layout_width="59dp"
                android:layout_height="match_parent" android:id="@+id/button21" android:layout_weight="1"
                android:background="@drawable/bgrate" android:textSize="22sp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

