<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="#0F0E10">

    <ImageView
            android:layout_width="411dp"
            android:layout_height="478dp" app:srcCompat="@drawable/clouds"
            android:id="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fontFamily="@font/gotham_bold" android:fontFamily="@font/gotham_bold"
            android:text="Lviv, Ukraine"
            android:textSize="15sp" android:textColor="#8C8C8C"
            android:id="@+id/tv_region"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_day" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginStart="25dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fontFamily="@font/gotham_bold" android:fontFamily="@font/gotham_bold"
            android:text="9°C"
            android:textSize="50sp" android:textColor="#FFFFFF"
            android:id="@+id/tv_temperature"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.801"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="260dp"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="?android:attr/listChoiceIndicatorSingle"
            android:id="@+id/btn_options"
            android:background="?android:attr/listChoiceIndicatorSingle"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="25dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="20dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fontFamily="@font/gotham_bold" android:fontFamily="@font/gotham_bold"
            android:text="7°... 12°"
            android:textSize="20sp" android:textColor="#8C8C8C"
            android:id="@+id/tv_min_max"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.811"
            app:layout_constraintTop_toBottomOf="@+id/tv_temperature"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gotham_bold"
            app:fontFamily="@font/gotham_bold"
            android:text="Today"
            android:textSize="23sp" android:textColor="#FFFFFF"
            android:id="@+id/tv_day"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="24dp" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginStart="25dp"/>
    <TextView
            android:layout_width="345dp"
            android:layout_height="22dp"
            app:fontFamily="@font/gotham_medium" android:fontFamily="@font/gotham_medium"
            android:text="Details"
            android:textSize="19sp" android:textColor="#FFFFFF"
            android:id="@+id/tv_details"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="20dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            android:layout_marginTop="12dp" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginStart="16dp"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="379dp"
            android:layout_height="122dp"
            android:background="@drawable/bgrate"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="15dp" android:layout_marginEnd="15dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="15dp">
        <Button
                android:text="M"
                android:layout_width="59dp"
                android:layout_height="match_parent" android:id="@+id/button6" android:layout_weight="1"
                android:background="@drawable/bgrate" android:textSize="22sp"
                android:fontFamily="@font/gotham_medium"
                android:textAlignment="center"/>
        <Button
                android:text="T"
                android:layout_width="59dp"
                android:layout_height="match_parent" android:id="@+id/button16" android:layout_weight="1"
                android:background="@drawable/bgrate" android:textSize="22sp"/>
        <Button
                android:text="W"
                android:layout_width="59dp"
                android:layout_height="match_parent" android:id="@+id/button17" android:layout_weight="1"
                android:background="@drawable/bgrate" android:textSize="22sp"/>
        <Button
                android:text="T"
                android:layout_width="59dp"
                android:layout_height="match_parent" android:id="@+id/button18" android:layout_weight="1"
                android:background="@drawable/bgrate" android:textSize="22sp"/>
        <Button
                android:text="F"
                android:layout_width="59dp"
                android:layout_height="match_parent" android:id="@+id/button19" android:layout_weight="1"
                android:background="@drawable/bgrate" android:textSize="22sp"/>
        <Button
                android:text="S"
                android:layout_width="59dp"
                android:layout_height="match_parent" android:id="@+id/button20" android:layout_weight="1"
                android:background="@drawable/bgrate" android:textSize="22sp"/>
        <Button
                android:text="S"
                android:layout_width="59dp"
                android:layout_height="match_parent" android:id="@+id/button21" android:layout_weight="1"
                android:background="@drawable/bgrate" android:textSize="22sp"/>
    </LinearLayout>
    <TextView
            android:text="Pressure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tv_pressure"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:textColor="#8C8C8C" android:fontFamily="@font/gotham_medium" android:layout_marginTop="7dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_details"/>
    <TextView
            android:text="Humidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tv_humidity"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:textColor="#8C8C8C" android:fontFamily="@font/gotham_medium" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_pressure"/>
    <TextView
            android:text="Wind Speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tv_windSpeed"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:textColor="#8C8C8C" android:fontFamily="@font/gotham_medium" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_humidity"/>
    <TextView
            android:text="Sunrise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tv_sunrise"
            android:textColor="#8C8C8C" android:fontFamily="@font/gotham_medium"
            app:layout_constraintStart_toEndOf="@+id/tv_pressure"
            android:layout_marginStart="40dp" app:layout_constraintTop_toBottomOf="@+id/tv_details"
            android:layout_marginTop="7dp"/>
    <TextView
            android:text="Sunset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tv_sunset"
            android:textColor="#8C8C8C" android:fontFamily="@font/gotham_medium"
            app:layout_constraintStart_toEndOf="@+id/tv_humidity"
            android:layout_marginStart="40dp" app:layout_constraintTop_toBottomOf="@+id/tv_sunrise"
            android:layout_marginTop="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>

